<Page x:Class="Recruitment_agency_Mukhtatenkov.Pages.ListSelector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Recruitment_agency_Mukhtatenkov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Выбор списков">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button x:Name="btnresumelist" Content="Список Резюме" Width="300" Height="70" Style="{StaticResource btnList}" Click="btnresumelist_Click"/>
                <Separator Width="100" Background="Transparent"/>
                <Button x:Name="btnvacancylist" Content="Список вакансий"  Width="300" Height="70" Style="{StaticResource btnList}" Click="btnvacancylist_Click"/>
                <Separator Width="100" Background="Transparent"/>
                <Button x:Name="btnsobesedovaniyalist" Content="Список собеседований" Width="300" Height="70" Style="{StaticResource btnList}" Click="btnsobesedovaniyalist_Click"/>

            </StackPanel>
           
               
        </StackPanel>

    </Grid>
</Page>
